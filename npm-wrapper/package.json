{
  "name": "@mohmk10/changelog-hub",
  "version": "1.0.0",
  "description": "API Breaking Change Detector - Detects breaking changes in REST, GraphQL, gRPC, AsyncAPI and Spring Boot APIs",
  "main": "dist/cli.js",
  "types": "dist/types/index.d.ts",
  "bin": {
    "changelog-hub": "./bin/changelog-hub.js"
  },
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "prepublishOnly": "npm run build",
    "clean": "rm -rf dist",
    "dev": "tsc --watch"
  },
  "keywords": [
    "api",
    "changelog",
    "breaking-changes",
    "openapi",
    "swagger",
    "graphql",
    "grpc",
    "asyncapi",
    "cli",
    "semver",
    "versioning"
  ],
  "author": "Mohamed Makan <kouyatemakan100@gmail.com>",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/Mohmk10/changelog-hub.git"
  },
  "homepage": "https://github.com/Mohmk10/changelog-hub",
  "bugs": {
    "url": "https://github.com/Mohmk10/changelog-hub/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "commander": "^11.1.0",
    "chalk": "^4.1.2",
    "yaml": "^2.3.4",
    "ora": "^5.4.1",
    "table": "^6.8.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/jest": "^29.5.11",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0"
  },
  "files": [
    "dist",
    "bin",
    "README.md"
  ]
}
